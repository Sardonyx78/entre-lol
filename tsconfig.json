{
     "compilerOptions": {
         "module": "commonjs",
         "target": "es2019",
         "types": [
             "node"
         ],
         "strict": true,
         "moduleResolution": "node",
         "declaration": true,
         "resolveJsonModule": true,
         "removeComments": false,
         "esModuleInterop": true,
         "alwaysStrict": true,
         "pretty": true,
         "sourceMap": true,
         "outDir": "dist",
         "incremental": true,
         "noEmitHelpers": true,
         "importHelpers": true,
         "skipLibCheck": true,
     },
     "include": ["src/**/**.**"]
 }